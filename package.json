{
  "name": "music-visualizer",
  "version": "1.0.0",
  "description": "Interactive music visualizer with multiple templates",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
